@model IPBLL.CreateEventRequest

@{
    ViewData["Title"] = "Create Event";
}

<div class="container">
    <div>
        <h1>Create Event</h1>
        <h4>Event Details</h4>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="CreateEventView">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EventName" class="control-label">Event Name</label>
                    <input asp-for="EventName" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.EventName)</span>
                </div>
                <div class="form-group">
                    <label asp-for="EventDescription" class="control-label">Event Description</label>
                    <input asp-for="EventDescription" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.EventDescription)</span>
                </div>
                <div class="form-group">
                    <label asp-for="EventDate" class="control-label">Event Date</label>
                    <input asp-for="EventDate" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.EventDate)</span>
                </div>
                <div class="form-group">
                    <label asp-for="EventLocation" class="control-label">Event Location</label>
                    <input asp-for="EventLocation" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.EventLocation)</span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxAttendees" class="control-label">Max Attendees</label>
                    <input asp-for="MaxAttendees" class="form-control" type="number" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.MaxAttendees)</span>
                </div>
                <div class="form-group">
                    <label asp-for="OrganizerName" class="control-label">Organizer Name</label>
                    <input asp-for="OrganizerName" class="form-control" />
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.OrganizerName)</span>
                </div>
                <div class="form-group">
                    <label asp-for="OrganizerContact" class="control-label">Organizer Email</label>
                    <input asp-for="OrganizerContact" class="form-control" type="email"/>
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.OrganizerContact)</span>
                </div>
                <div class="form-group mt-3">
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Create" class="btn btn-primary m-2" />
                        <a asp-action="Index" class="btn btn-secondary m-2">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
